{
  "name": "eon-next-frontend",
  "private": true,
  "version": "0.0.0",
  "description": "Frontend panel and Lovelace cards for the EON Next integration",
  "type": "module",
  "scripts": {
    "build": "rollup -c rollup.config.mjs",
    "dev": "rollup -c rollup.config.mjs --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write 'src/**/*.{ts,css}' 'dev/**/*.{html,js}'",
    "format:check": "prettier --check 'src/**/*.{ts,css}' 'dev/**/*.{html,js}'",
    "typecheck": "tsc --noEmit",
    "codegen": "python3 ../scripts/generate_ts_api.py",
    "codegen:check": "python3 ../scripts/generate_ts_api.py && git diff --exit-code src/api.generated.ts"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.0",
    "eslint": "^9.39.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-lit": "^2.2.1",
    "eslint-plugin-wc": "^2.2.1",
    "globals": "^15.15.0",
    "prettier": "^3.8.1",
    "rollup": "^4.31.0",
    "rollup-plugin-lit-css": "^6.0.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-serve": "^3.0.0",
    "tslib": "^2.8.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.56.1"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "lit": "^3.2.0"
  }
}
